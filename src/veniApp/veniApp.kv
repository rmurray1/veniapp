#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory


<RegisterScreen>:
    button_font_size: '20sp'
    padding: root.width * .02, root.height * .02
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'

            size_hint: 1,.07
            Button:
                text: 'Open'
                size_hint_x: .05
            Label:
                text: "Date"
                size_hint_x: .05
            TextInput:
                id:begindate
                multiline:False
                size_hint_x: .2
            Label:
                text: "to"
                size_hint_x: .05
            TextInput:
                id:enddate
                multiline:False
                size_hint_x: .2
            Label:
                text: "Item"
                size_hint_x: .05
            TextInput:
                id:searchtext
                multiline: False

            Button:
                text: 'Clear'
                size_hint_x: .05


        Button:
            text: 'Register'
            font_size: root.button_font_size
            size_hint: 1, None
            padding: root.padding
            height: self.texture_size[1] + (2 * root.padding[1])
        Button:
            id: rback_button
            text: 'Back to Welcome'
            font_size: root.button_font_size
            size_hint: 1, None
            padding: root.padding
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'welcome'

<WelcomeScreen>:
    padding: root.width * .02, root.height * .02
    button_font_size: '20sp'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        Label:
            text: 'Welcome'
            font_size:'25sp'
            padding: root.width * .02, root.height * .02

            valign: 'top'
            halign: 'center'
            height: self.texture_size[1] + (2 * root.padding[1])
        Label:
            text: 'Veni'
            font_size: '20sp'
            padding: root.padding
            text_size: self.size
            valign: 'top'
            halign: 'center'
            height: self.texture_size[1] + (2 * root.padding[1])

        Button:
            text: 'Login'
            font_size: root.button_font_size
            size_hint: 1, None
            padding: root.padding
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'login'
        Button:
            text: 'Register'
            font_size: root.button_font_size
            size_hint: 1, None
            padding: root.padding
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'register'

<LoginScreen>:
    padding: root.width * .02, root.height * .02
    button_font_size: '20sp'
    label_font_size: '15sp'

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        Label:
            text: 'Login'
            font_size:'20sp'
            size_hint: 1, None
            space: 5
            padding: root.padding
            valign: 'top'
            height: self.texture_size[1] + (2 * root.padding[1])

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1

            GridLayout:
                cols: 2
                row: 2
                row_default_height: "40dp"
                row_force_default: True
                spacing: 5
                padding: root.padding
                Label:
                    text: 'Email Address'
                    font_size: root.label_font_size
                    halign: 'left'
                    size_hint: None, None
                    text_size: self.size
                    width: 120

                TextInput:
                    id: ti_email
                    font_size: root.label_font_size
                    text: 'email address'
                    text_size: self.size
                    multiline:False
                    focus: True


                Label:
                    text: 'Password'
                    font_size: root.label_font_size
                    size_hint: None, None
                    text_size: self.size
                    halign: 'left'
                    width: 120

                TextInput:
                    id: ti_passwd
                    font_size: root.label_font_size
                    text: 'Password'
                    multiline:False
                    password: True


        Button:
            text: 'Login'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            padding: root.padding
        Button:
            text: 'Back to Welcome'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            padding: root.padding
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'welcome'

